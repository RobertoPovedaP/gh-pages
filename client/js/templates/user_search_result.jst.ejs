<% if(user != null && _.isUndefined(q)){ %>
	<a title="<%- user.attributes.full_name %> (<%- user.attributes.username %>)" href="#" class="js-add-organization-member row" data-user-id="<%- user.id %>"><span>
<% if(!_.isEmpty(user.attributes.profile_picture_path)) { 
	var profile_picture_path = user.showImage('User', user.attributes.id, 'micro_thumb' );
%>
	<img src="<%-profile_picture_path %>" alt="[Image: <%-user.attributes.username %>]" title="<%- user.attributes.full_name %> (<%- user.attributes.username %>)" class="img-rounded img-responsive avatar avatar-sm">
<% } else {%>
	<i class="avatar avatar-color-194 avatar-sm img-rounded"><%- user.attributes.initials %></i>									
<% } %>
</span> <span><%- user.attributes.full_name %> (<%- user.attributes.username %>)</span></a>
<% }else if(user == null && _.isUndefined(q)){ %>	
<span class="small">
	<%- i18next.t('No %s available.', { postProcess: 'sprintf', sprintf: [i18next.t('users')] }) %>
</span>
<% } else{ %>
	<%- i18next.t('Search for a person in %s by name or email address.', { postProcess: 'sprintf', sprintf: [SITE_NAME]}) %>
<% } %>
