<div class="modal fade" id="modalMusic" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close js-close-popover" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			  <h4 id="myModalLabel" class="modal-title"><strong><%- i18next.t('Productivity Beats') %></strong></h4>
			</div>			
			<div class="modal-body clearfix">					
				<div class="col-xs-12 h4 btn-block">
					<form class="form-horizontal" name="musicUpdate" id="js-MusicForm">						
					  <div class="form-group input text required">
						<label for="title" class="sr-only"><%- i18next.t('Name') %></label>
						<div class="col-xs-12">
						  <input type="text" class="form-control js-music_name" id="title" placeholder="<%- i18next.t('Name') %>" required title="<%- i18next.t('Name') %>">
						</div>
					  </div>
					  <div class="form-group required">
						<label class="sr-only"><%- i18next.t('abc Notation') %></label>
						<div class="col-xs-12">
						  <textarea class="form-control js-music_content" rows="3" placeholder="<%- i18next.t('abc Notation') %>" required></textarea>
						  <div>
							<span class="help-block">
								<%- i18next.t('Enter abc music notation. May choose from') %> <a href="http://abcnotation.com/" target="_blank" title="abcnotation">abcnotation</a>, <a href="http://web.archive.org/web/20160409193333/http://reissendewoelfe.de/abc/" target="_blank" title="reissendewoelfe">reissendewoelfe</a>, or <a href="http://www.lotro-abc.com/" target="_blank" title="Lotro ABC">Lotro ABC</a>
							</span>
						  </div>
						</div>
					  </div>
						<div class="form-group">
							<label for="submit2" class="col-sm-1 control-label sr-only"><%- i18next.t('Submit') %></label>
							<input type="submit" value="<%- i18next.t('Submit') %>" id="js-music_add" class="btn btn-primary btn-lg">
						</div>					  
					</form>				
				</div>										
			</div>
		  </div><!-- /.modal-content -->
    </div>
</div>